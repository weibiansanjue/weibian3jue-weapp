<!--pages/san/san.wxml-->

<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab"><i></i>Blog</view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">Podcat</view>
  <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">Vlog</view>
</view>
<view class="swiper-data">
  <swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
    <swiper-item>
      <view>BLOG</view>
      <view>
          <button bindtap="getPageData">test</button>
      </view>
    </swiper-item>
    <swiper-item>
      <view>PODCAST</view>
    </swiper-item>
    <swiper-item>
      <view>VLOG</view>
    </swiper-item>
  </swiper>
</view>